choix = None

while choix != "0":
    print("\nMenu :")
    print("1 → Dire bonjour")
    print("2 → Additionner deux nombres")
    print("0 → Quitter")
    choix = input("Choisissez une option : ")

    if choix == "1":
        print("Bonjour !")
    elif choix == "2":
        a = float(input("Entrez un nombre : "))
        b = float(input("Entrez un autre nombre : "))
        print(f"Résultat : {a + b}")
    elif choix != "0":
        print("Option invalide.")
