role = input("Quel est votre rôle ? (employé, visiteur, sécurité) : ").lower()

if role == "employé":
    badge = input("Badge valide ? (oui/non) : ").lower()
    if badge == "oui":
        print("Accès autorisé.")
    else:
        print("Accès refusé.")
elif role == "visiteur":
    rdv = input("Avez-vous un rendez-vous ? (oui/non) : ").lower()
    if rdv == "oui":
        print("Accès autorisé.")
    else:
        print("Accès refusé.")
elif role == "sécurité":
    print("Accès autorisé.")
else:
    print("Rôle inconnu, accès refusé.")
