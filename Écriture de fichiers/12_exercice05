phrase = input("Entrez une phrase : ")

nb_mots = len(phrase.split())
nb_caracteres = len(phrase)

with open("rapport.txt", "w") as f:
    f.write(f"Texte : {phrase}\n")
    f.write(f"Nombre de mots : {nb_mots}\n")
    f.write(f"Nombre de caractères : {nb_caracteres}\n")

print("Rapport enregistré dans 'rapport.txt'.")
